            <Button IsCancel="True" MinWidth="60">_Cancel</Button>
        </WrapPanel>
        <TextBox Name="txtX" Grid.Column="1" Width="50" Margin="0,11,244,0" RenderTransformOrigin="-1.991,0.237" Grid.RowSpan="2" Grid.ColumnSpan="2">Answer</TextBox>
        <TextBox x:Name="txtY" Grid.Column="2" Width="50" Margin="14.248,11,189,0" Text="Answer" Grid.RowSpan="2"/>
        <TextBox x:Name="txtHeight" Grid.Column="2" Width="50" Margin="148.248,10,55,0" Text="Answer"/>
        <TextBox x:Name="txtWeidth" Grid.Column="2" Width="50" Margin="203,10,0,0" Text="Answer"/>
    </Grid>
</Window>
